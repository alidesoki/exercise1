version: 2.1 

jobs: 
    copy-ips:
      steps:
        - checkout
        - run: |
            touch inventory.txt
            echo [all] > inventory.txt
            aws ec2 describe-instances \
            --query 'Reservations[*].Instances[*].PublicIpAddress' \
            --filters "Name=tag:Project,Values=udacity" \
            --output text >> inventory

